@{
    ViewData["Title"] = "Index";
}

@model List<CustomerWithRoomDTO>
<h1>Customers</h1>
@* <a class="btn btn-primary" asp-controller="Customer" asp-action="Save">Save Product</a>
 *@
<a class="btn btn-primary" asp-controller="Customer" asp-action="Save">Save Customer</a>
 <table class="table table-striped">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Passport No</td>
            <td>Address</td>
            <td>CheckIn Date</td>
            <td>CheckOut Date</td>
            <td>Payment</td>
            <td>IsPayed</td>
            <td>Room</td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.PassportNo</td>
                <td>@item.Address</td>
                <td>@item.CheckInDate</td>
                <td>@item.CheckOutDate</td>
                <td>@item.Payment</td>
                <td><input type="checkbox" disabled @(item.IsPayed ? "checked" : "") /></td>
                <td>@item.Room.RoomNo</td>
                <td style="white-space: nowrap;">
                        <a class="btn btn-warning btn-sm" asp-controller="Customer" asp-action="Update" asp-route-id="@item.Id">Update</a>
                        <a class="btn btn-danger btn-sm" asp-controller="Customer" asp-action="Remove" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

